{% extends 'layout-login.njk' %}

{% block head %}
  <title>Foodfy - Esqueceu a senha?</title>
{% endblock %}

{% block content %}
<div class="wrapper-login">
  <header>
    <div class="login logotipo">
      <a href="/"><img src="/assets/logo.png" alt="Logotipo Foodfy"></a>
    </div>
  </header>
  
  <main class="reset-password container form">
    
    <form action="/admin/users/password-reset" method="post">
      <div class="header">
        <h1>Nova Senha</h1>
      </div>
      
      <div class="fields">
        {% include "session/reset-fields.njk" %}
      </div>
  
      <div class="buttons">
        <button type="submit">Nova Senha</button>
      </div>
    </form>

  </main>

</div>
{% endblock %}