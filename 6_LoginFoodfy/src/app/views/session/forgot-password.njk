{% extends 'layout-login.njk' %}

{% block head %}
  <title>Foodfy - Esqueceu a senha?</title>
{% endblock %}

{% block content %}
<div class="wrapper-login">
  <header>
    <div class="login logotipo">
      <a href="/"><img src="/assets/logo.png" alt="Logotipo Foodfy"></a>
    </div>
  </header>
  
  <main class="forgot-password container form">
    
    <form action="/admin/users/forgot-password" method="post">
      <div class="header">
        <h1>Esqueceu a senha?</h1>
      </div>
      
      <div class="fields">
        <div class="form-forgotPassword">
          <div>
            <h2>Email</h2>
            <input 
              id="input-email" 
              type="email" 
              name="email"
              placeholder="Digite seu email para recuperar sua senha" 
              value="{{user.email}}"
              onblur="Validate.apply(this, 'isEmail')"
            >
          </div>        
        </div>
      </div>
  
      <div class="buttons">
        <button type="submit">Recuperar</button>
      </div>

    </form>

  </main>

</div>
{% endblock %}