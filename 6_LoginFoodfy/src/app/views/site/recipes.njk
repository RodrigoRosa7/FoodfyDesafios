{% extends "layout.njk" %}

{% block head %}
  <head>
    <title>Foodfy - Receitas</title>
  </head>
{% endblock %}

{%block filter%}
  <div class="filter">
    <form action="/receitas_filtradas" method="get">
      <input 
        type="text" 
        name="filter" 
        placeholder="Buscar uma receita" 
        value="{{filter}}"
      >

      <button type="submit">Buscar</button>
    </form>
  </div>
{%endblock%}

{% block content %}

  <main>

    <div class="recipes">
      {% for item in items %}
      <div class="recipe" id="{{item.id}}">
        <img src="{{item.recipePhoto}}" alt="Imagem de {{item.title}}">

        <div class="info-card">
          <strong>{{item.title}}</strong>
          <p>por {{item.name_chef}}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </main>

  <div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
  ></div>

{% endblock %}