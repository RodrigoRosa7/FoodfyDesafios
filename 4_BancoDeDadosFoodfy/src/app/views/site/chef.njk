{% extends "layout.njk" %}

{% block content %}

  <main class="chefDescription">
    <div class="chef-header">
      <img src="{{chef.avatar_url}}" alt="avatar de {{chef.name}}">
      <h1>{{chef.name}}</h1>
      <p>{{chef.total_recipes}} receitas</p>
    </div>
  </main>

  <section class="chef_Recipes">
    <h2>Receitas</h2>
    <div class="indexRecipes">
      {% for recipe in recipes %}
      <div class="recipeDados" id="{{recipe.id}}">
      <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">

      <div class="info-card">
        <h1>{{recipe.title}}</h1>
        <p>por {{chef.name}}</p>
        <a href="/receita/{{recipe.id}}">Visualizar</a>
      </div>
      </div>
      {% endfor %}
    </div>
  </section>

{% endblock %}