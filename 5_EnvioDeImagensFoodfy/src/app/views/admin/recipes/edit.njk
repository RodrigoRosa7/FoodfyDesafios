{% extends 'layout-admin.njk' %}

{% block content %}
  <main>
    <form action="/admin/receitas?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="formRecipeHeader">
        <h1>Editando receita</h1>
        <div>
          <button id ="deleteButton" type="submit" form="form-delete">Deletar</button>
          <button type="submit">Salvar receita</button>
        </div>
      </div>
      
      {% include "admin/recipes/fields.njk" %}

      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>

    <form id="form-delete" action="/admin/receitas?_method=DELETE" method="POST" onsubmit="return confirm('Deseja deletar?')">
      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>
  </main>

{% endblock %}